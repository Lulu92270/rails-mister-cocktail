<% if @cocktails.any? %>
  <h3>List of cocktails</h3>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <%#= cl_image_tag("https://res.cloudinary.com/lucien-andrieux/image/upload/v1604664825/knlm8xz3nfs8rzokv3ps.jpg",
        width: 400, height: 300, crop: :fill) %>
      </li>
    <% end %>
  </ul>
  <strong><%= link_to 'add new cocktail', new_cocktail_path %></strong>
<% else %>
  <h3>Bummer ğŸ˜¿</h3>
  <p class="empty-state">
    You don't have any cocktails yet. Get the party started by
    <strong><%= link_to 'adding your first one now', new_cocktail_path %></strong>!
  </p>
<% end %>
